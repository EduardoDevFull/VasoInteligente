<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cbedf5"
    tools:context=".fragment.HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="411dp"
        android:layout_height="60dp"
        android:background="@drawable/barra_navegacao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="5dp"
        android:foregroundGravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="136dp"
        android:fontFamily="@font/nokora_regular"
        android:text="Lembrete"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_cuide_planta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="200dp"
        android:fontFamily="@font/arapey_regular"
        android:text="Cuide de suas plantas"
        android:textColor="#000000"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/container_buttons"
        android:layout_width="326dp"
        android:layout_height="250dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="250dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_cuide_planta"
        app:srcCompat="@drawable/retangulo_dados" />

    <TextView
        android:id="@+id/txt_add_fertilizante2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="435dp"
        android:fontFamily="@font/arapey_regular"
        android:text="Adicione fertilizante"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_regar_planta" />

    <ImageView
        android:id="@+id/icon_add_fertilizante2"
        android:layout_width="61dp"
        android:layout_height="81dp"
        android:layout_marginStart="255dp"
        android:layout_marginTop="410dp"
        app:layout_constraintStart_toEndOf="@+id/txt_add_fertilizante"
        app:layout_constraintTop_toBottomOf="@+id/icon_regar_planta"
        app:srcCompat="@drawable/fertilizante" />

    <TextView
        android:id="@+id/txt_regar_planta4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="365dp"
        android:fontFamily="@font/arapey_regular"
        android:text="Regue sua planta"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_container_rotina" />

    <ImageView
        android:id="@+id/btn_regar_planta"
        android:layout_width="69dp"
        android:layout_height="60dp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="350dp"
        app:layout_constraintStart_toEndOf="@+id/txt_regar_planta"
        app:layout_constraintTop_toBottomOf="@+id/img_container_rotina"
        app:srcCompat="@drawable/agua" />

    <ImageView
        android:id="@+id/img_container_rotina"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="280dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/lembrete" />

    <TextView
        android:id="@+id/txt_rotina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="172dp"
        android:layout_marginTop="285dp"
        android:fontFamily="@font/comicneue_bold"
        android:text="Rotina:"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/container_buttons" />


</FrameLayout>